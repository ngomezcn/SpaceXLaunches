<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_rounded_bg"
    android:layout_marginBottom="14dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">


    <ImageView
        android:id="@+id/launchImage_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/launch_screen_img"

        android:layout_marginLeft="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/missionName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="- - -"

        android:textStyle="bold"
        android:textColor="#051120"
        android:textSize="20sp"

        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/launchImage_imageView"
        app:layout_constraintStart_toEndOf="@+id/launchImage_imageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav_pin"


        android:rotation="40"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/missionName_textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rocketName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="- - -"

        android:textColor="#051120"
        android:textSize="20sp"

        android:layout_marginTop="3sp"
        app:layout_constraintTop_toBottomOf="@+id/missionName_textView"
        app:layout_constraintStart_toStartOf="@+id/missionName_textView" />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"

        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/launchImage_imageView"
        app:layout_constraintStart_toStartOf="@+id/rocketName_textView"
        tools:text="- - -" />

</androidx.constraintlayout.widget.ConstraintLayout>